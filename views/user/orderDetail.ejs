                                                                <% if (order.status === 'Delivered') { %>
                                                                    <button type="button" class="btn btn-primary" onclick="confirmReturn('<%= order._id %>','<%= item.Product._id %>','<%= item.price*item.quantity %>')">Return Order</button>
