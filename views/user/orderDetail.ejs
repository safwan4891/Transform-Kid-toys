                                                                    <% if (item.status !== 'Cancelled' && item.status !== 'Delivered') { %>
                                                                        <button type="button" class="px-9 btn btn-danger" onclick="handleSelection('<%= order._id %>','<%= item.Product._id %>','<%= item.price*item.quantity %>')">Cancel Order</button>
                                                                    <% } %>
                                                                <% } %>
                                                            </td>
                                                            
                                                        <td>
                                                            <% if(order.status==='Delivered' ){ %>
